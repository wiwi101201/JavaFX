<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.loginapp.LoginController" alignment="CENTER" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <Button text="Login" onAction="#handleLoginButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="Sign Up" onAction="#handleSignUpButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

</GridPane>
